            }
        },
        {
            "type": "shell",
            "label": "Run game (WINDOWS)",
            "command": "${workspaceFolder}\\game.exe",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file linux",
            "command": "/usr/bin/g++",
            "args": [
                "thirdparty/glad/glad.c",
                "core/graphics/*.cpp",
                "core/input/*.cpp",
                "core/log/log.cpp",
                "game.cpp",
                "-lglfw3",
                "-I./thirdparty",
                "-L./",
                "-Wl,-rpath",
                ".",
                "-lsteam_api",
                "-lGL",
                "-lX11",
                "-lpthread",
                "-lXrandr",
                "-lXi",
                "-ldl",
                "-o",
                "${workspaceFolder}/game"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }

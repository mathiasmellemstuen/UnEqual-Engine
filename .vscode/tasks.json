        {
            "type": "shell",
            "label": "Clean engine build (WINDOWS)",
            "command": "${workspaceFolder}\\clean_engine_build.bat",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "type": "shell",
            "label": "Build Engine(DLL) (WINDOWS)",
            "command": "${workspaceFolder}\\build_engine.bat",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "type": "shell",
            "label": "Build Game (WINDOWS)",
            "command": "${workspaceFolder}\\build_game.bat",
            "options": {
